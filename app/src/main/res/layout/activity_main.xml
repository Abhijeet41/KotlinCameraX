<?xml version="1.0" encoding="utf-8"?>
<androidx.constraintlayout.widget.ConstraintLayout xmlns:android="http://schemas.android.com/apk/res/android"
    xmlns:app="http://schemas.android.com/apk/res-auto"
    xmlns:tools="http://schemas.android.com/tools"
    android:layout_width="match_parent"
    android:layout_height="match_parent"
    tools:context=".MainActivity">


    <Button
        android:id="@+id/btnCamerax"
        android:layout_width="wrap_content"
        android:layout_height="wrap_content"
        android:text="capture imagre from camerax"
        app:layout_constraintBottom_toBottomOf="parent"
        app:layout_constraintEnd_toEndOf="parent"
        app:layout_constraintStart_toStartOf="parent"
        app:layout_constraintTop_toTopOf="parent" />

    <Button
        android:id="@+id/btnNativeCamera"
        android:layout_width="wrap_content"
        android:layout_height="wrap_content"
        android:layout_marginTop="16dp"
        android:text="capture image from native camera"
        app:layout_constraintEnd_toEndOf="@+id/btnCamerax"
        app:layout_constraintStart_toStartOf="@+id/btnCamerax"
        app:layout_constraintTop_toBottomOf="@+id/btnCamerax" />
</androidx.constraintlayout.widget.ConstraintLayout>